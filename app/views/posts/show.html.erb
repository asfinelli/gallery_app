  <body style="padding-top:0;">

      <button class= "scroll" style= "float: right; display: inline;">
        <%= link_to("Next Picture", @post.next_post) if @post.next_post%>
      </button>


      <button class= "previous scroll" style="float: left; display: inline;">
        <%= link_to("Previous Picture", @post.previous_post) if @post.previous_post %>
      </button>

        <div class="container-fluid;" style="overflow:hidden;">
    <div class="img">
      <% if @post.image_content_type =~ /^image/ %>
      <%= image_tag @post.image.url, width: "100%", height: "90%" %><br>

      <% else @post.image_content_type =~ /^video/ %>

      <%= video_tag @post.image.url, width: "100%", height: "100%", controls: "true" %><br>
      <% end %>
    </div>
      <h3 style="text-decoration:underline;text-align:center;"><%= @post.description %> </h3>
    <br>
    <br />


  </div>
    <%=render 'comments/comment' %>
</body>
