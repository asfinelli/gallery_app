
<div class="container-fluid">

  <% @posts.each do |post| %>

  <div class="col-lg-4 col-lg-3 col-md-4 col-sm-4 col-xs-6">
    <div class="img-thumbnail img-responsive">
      <% if post.image_content_type =~ /^image/ %>

      <%= (link_to image_tag(post.image.url, width: "100%", height: "150em"), post, rel: "shadowbox") %>

      <% else post.image_content_type =~ /^video/ %>

      <%= (link_to video_tag(post.image.url, width: "100%",  height: "145em"), post, rel: "shadowbox") %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
