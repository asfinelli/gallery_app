<div class="container-fluid">
  <% @post.in_groups_of(4, false).each do |group| %>
  <% group.each do |post| %>
  <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6">
    <div class="row img-thumbnail img-responsive">
      <%= (link_to image_tag(post.image.url, width: "100%", height: "150em"), post, rel: "shadowbox") %>
      <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
  <% end %>
  <% end %>
</div>
